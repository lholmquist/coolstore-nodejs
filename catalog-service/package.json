{
  "name": "catalog-service",
  "version": "1.0.0",
  "description": "coolstore backend service",
  "scripts": {
    "test": "jest",
    "start": "node ./dist/Server/app.js",
    "dev": "nodemon ./src/Server/app.ts",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf ./dist",
    "build:compile": "tsc --project tsconfig.json",
    "deploy": "npx nodeshift --name catalog --build.strategy Docker --useDeployment --expose --deploy.port 7072"
  },
  "files": [
    "tsconfig.json",
    "package.json",
    "Dockerfile",
    ".env",
    ".dockerignore",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sshaaf/coolstore-nodejs.git"
  },
  "author": "Shaaf, Syed",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sshaaf/coolstore-nodejs/issues"
  },
  "homepage": "https://github.com/sshaaf/coolstore-nodejs#readme",
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "mongodb": "^5.7.0",
    "mongoose": "^7.3.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
